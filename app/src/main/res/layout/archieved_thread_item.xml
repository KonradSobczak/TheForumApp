<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:text="1"/>

        <TextView
            android:id="@+id/issueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/count"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:text="title"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerNameView"
            android:textColor="@color/colorPrimary"
            android:id="@+id/engineerNameView"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/count"
            android:text="Hello!"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineerNameView"
            android:id="@+id/resolutionView"
            android:textColor="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/count"
            android:text="Hello!"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/issueTitle"
            android:id="@+id/customerNameView"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/count"
            android:text="Hello!"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/issueType"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:textStyle="italic"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Hello!"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/binaryView"
            android:layout_height="wrap_content"
            android:layout_below="@id/issueType"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Hello!"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/osView"
            android:layout_height="wrap_content"
            android:layout_below="@id/binaryView"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Hello!"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>